{
  "compilerOptions": {
    "target": "es6",  // Use es6 or esnext for modern JavaScript
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,  // Leave as true for faster build times
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,  // Enable strict type checking for better type safety
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,  // Set this to false if you need the build output
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
